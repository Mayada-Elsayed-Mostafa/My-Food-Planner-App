<resources>

    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@color/my_light_primary</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTitleTextStyle">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FABShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/accent_orange</item>
    </style>

    <style name="CircularShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
